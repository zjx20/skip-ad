{
  "manifest_version": 3,
  "name": "Skip Ad",
  "description": "Automatically closes YouTube ads.",
  "version": "1.1",
  "icons": { "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["youtube.css"],
      "js": ["youtube.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "host_permissions": [
    "*://.youtube.com/",
    "*://*.youtube.com/"
  ],
  "permissions": [
    "cookies"
  ]
}
